@{
    ViewData["Title"] = "Proyectos";
}

<div class="content">
    <section id="projects" class="section">
        <h2 class="section-title">Proyectos</h2>
        <div class="project-grid">
            @foreach (var proyecto in ViewBag.Proyectos)
            {
                <div class="project-item">

                    <div class="contenedor-imagen">
                        <img src="@proyecto.ImagenUrl" alt="Proyecto @proyecto.Nombre">
                    </div>

                    <div class="tit-desc-proyecto">
                        <h3 class="project-title">@proyecto.Nombre</h3>
                        <p class="project-description">@proyecto.Descripcion</p>
                    </div>

                    <a href="@proyecto.Url" class="btn btn-outline-dark btn-abajo-proyecto" target="_blank">Ver Proyecto</a>
                </div>
            }
        </div>
    </section>

    <img src="img/earth.svg" class="earth" id="earth">
    <img src="img/rocket.svg" class="rocket" id="rocket">
    <img src="img/moon.svg" class="moon" id="moon">
</div>